<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rebeltoolbox.rebelengine"
    android:versionCode="1"
    android:versionName="1.0">

    <!-- Should match the mindSdk and targetSdk values in platform/android/java/app/config.gradle -->
    <uses-sdk android:minSdkVersion="19" android:targetSdkVersion="31" />

    <application>

        <!-- Records the version of the Godot library -->
        <meta-data
            android:name="org.godotengine.library.version"
            android:value="${godotLibraryVersion}" />

        <service android:name=".RebelDownloaderService" />

    </application>

    <instrumentation
        android:name=".RebelInstrumentation"
        android:icon="@mipmap/icon"
        android:label="@string/project_name_string"
        android:targetPackage="com.rebeltoolbox.rebelengine" />

</manifest>
